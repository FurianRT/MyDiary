<?xml version="1.0" encoding="utf-8"?><!--Без корнегово лайаута дергано прорисовывается стики хедр-->
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="7dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_note_text_day"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="16dp"
            android:textColor="@color/grey_dark"
            android:textSize="30sp"
            tools:text="30" />

        <TextView
            android:id="@+id/text_note_text_day_of_week"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_note_text_day"
            android:gravity="center"
            android:textColor="@color/grey_dark"
            android:textSize="18sp"
            tools:text="Mon" />

        <TextView
            android:id="@+id/text_note_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="24dp"
            android:layout_toEndOf="@id/text_note_text_day"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingTop="22dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            tools:text="Test title test title test title test title" />

        <TextView
            android:id="@+id/text_note_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_note_title"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="24dp"
            android:layout_toEndOf="@id/text_note_text_day"
            android:ellipsize="end"
            android:maxLines="4"
            android:paddingTop="16dp"
            android:paddingBottom="22dp"
            android:textColor="@color/black"
            tools:text="Test content test content test content test content test content test content test content test content test content test content test content test content" />

        <ImageView
            android:id="@+id/image_note_text_sync"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingBottom="16dp"
            android:src="@drawable/ic_cloud_off"
            android:visibility="gone"
            tools:ignore="ContentDescription"
            tools:visibility="visible" />

        <View
            android:id="@+id/view_note_text_selected"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.2"
            android:background="?attr/colorAccent"
            android:elevation="4dp"
            android:visibility="gone" />

    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>
